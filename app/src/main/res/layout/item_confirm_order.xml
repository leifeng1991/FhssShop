<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mNumberTextView"
            style="@style/ConfirmOrderTextView"
            android:layout_weight="1"
            android:text="编号" />

        <View style="@style/VLine" />

        <TextView
            android:id="@+id/mNameTextView"
            style="@style/ConfirmOrderTextView"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="名称" />

        <View style="@style/VLine" />

        <TextView
            android:id="@+id/mTypekTextView"
            style="@style/ConfirmOrderTextView"
            android:layout_weight="1"
            android:text="型号"
            android:visibility="gone"/>

        <View style="@style/VLine"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/mColorsTextView"
            style="@style/ConfirmOrderTextView"
            android:layout_weight="1"
            android:text="颜色"
            android:visibility="gone"/>

        <View style="@style/VLine"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/mCountTextView"
            style="@style/ConfirmOrderTextView"
            android:layout_weight="1"
            android:text="数量" />

        <View style="@style/VLine" />

        <TextView
            android:id="@+id/mNewPriceTextView"
            style="@style/ConfirmOrderTextView"
            android:layout_weight="1"
            android:text="价格" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorTextBlack_333333"/>
</LinearLayout>
