<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPageBackground"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/colorTheme"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mBankLogoImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                app:riv_corner_radius="25dp" />

            <TextView
                android:id="@+id/mBankNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="建设银行"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/mBankLogoImageView" />

            <TextView
                android:id="@+id/mBankTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="储蓄卡"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/mBankLogoImageView"
                app:layout_constraintTop_toBottomOf="@+id/mBankNameTextView" />

            <TextView
                android:id="@+id/mBankNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:text="****　****　****　****　4555"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="@+id/mBankTypeTextView"
                app:layout_constraintTop_toBottomOf="@+id/mBankLogoImageView" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>