<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextGray_EEEEEE"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorPageBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/PersonInfoLeftTextView"
            android:layout_weight="9"
            android:text="联系人" />

        <EditText
            android:id="@+id/mNameEditText"
            style="@style/RightEt"
            android:layout_weight="3"
            android:hint="名字"
            android:inputType="text"
            android:paddingEnd="15dp"
            android:paddingRight="15dp" />
    </LinearLayout>

    <View style="@style/LineHorizontal_C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/PersonInfoLeftTextView"
            android:layout_weight="9"
            android:text="手机号码" />

        <EditText
            android:id="@+id/mBankNoEditText"
            style="@style/RightEt"
            android:layout_weight="3"
            android:hint="11位手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingEnd="15dp"
            android:paddingRight="15dp" />
    </LinearLayout>

    <View style="@style/LineHorizontal_C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/PersonInfoLeftTextView"
            android:layout_weight="9"
            android:text="选择地区" />

        <TextView
            android:id="@+id/mRegionTextView"
            style="@style/RightEt"
            android:layout_weight="3"
            android:drawableRight="@mipmap/ic_black_location"
            android:hint="地区信息"
            android:inputType="text"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:drawableEnd="@mipmap/ic_black_location" />

    </LinearLayout>

    <View style="@style/LineHorizontal_C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/PersonInfoLeftTextView"
            android:layout_gravity="top"
            android:layout_weight="9"
            android:text="详细地址" />

        <EditText
            android:id="@+id/mEditText"
            style="@style/RightEt"
            android:layout_weight="3"
            android:gravity="top"
            android:hint="街道门牌信息"
            android:inputType="textAutoComplete"
            android:minHeight="60dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp" />
    </LinearLayout>

    <View style="@style/LineHorizontal_C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/PersonInfoLeftTextView"
            android:layout_weight="9"
            android:text="邮政编码" />

        <EditText
            android:id="@+id/mPostalCodeEditText"
            style="@style/RightEt"
            android:layout_weight="3"
            android:hint="邮政编码"
            android:inputType="number"
            android:paddingEnd="15dp"
            android:paddingRight="15dp" />
    </LinearLayout>

    <View style="@style/LineHorizontal_C" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPageBackground"
        android:layout_weight="1"/>
</LinearLayout>