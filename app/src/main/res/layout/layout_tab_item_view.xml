<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab_icon"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <com.fhss.shop.weight.ShapeButton
            android:id="@+id/mReadPointsButton"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_toEndOf="@+id/iv_tab_icon"
            android:layout_toRightOf="@+id/iv_tab_icon"
            app:fb_defaultColor="#ff0000"
            app:fb_radius="5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_tab_icon"
            android:layout_marginTop="4dp"
            android:textColor="@color/selector_main_tab_title_color"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>