<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPageBackground"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextGray_EEEEEE"
        android:padding="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mImageViewLayout"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="3dp" />

        <TextView
            android:id="@+id/mMessageTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="消息标题"
            android:textColor="@color/colorTextBlack_333333"
            android:textSize="15sp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/mImageViewLayout"
            app:layout_constraintRight_toLeftOf="@+id/mMessageTimeTextView" />

        <TextView
            android:id="@+id/mMessageTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="11:59"
            android:textColor="@color/colorTextBlack_333333"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/mMessageTitleTextView"
            app:layout_constraintLeft_toRightOf="@+id/mMessageTitleTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mMessageTitleTextView" />

        <TextView
            android:id="@+id/mMessageContentTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容 "
            android:textColor="@color/colorTextBlack_333333"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/mMessageTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/mMessageTitleTextView" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>